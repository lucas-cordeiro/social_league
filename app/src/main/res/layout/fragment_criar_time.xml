<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerCriarTime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNavMenu"
    tools:context="apps.akayto.socialleague.Fragments.CriarTimeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/criarTime_ProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/criarTime_BntEnviar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/criarTime_EdtMembro5" />

            <Button
                android:id="@+id/criarTime_BntEnviar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/my_button_bg"
                android:text="@string/bnt_Enviar"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/criarTime_ProgressBar" />

            <EditText
                android:id="@+id/criarTime_EdtNomeTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/edt_NomedoTime"
                android:inputType="textAutoCorrect|textAutoComplete"
                android:singleLine="false"
                android:textColor="@color/colorNavLetras"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/cadastrar_Text7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cadastrar_Text6" />

            <TextView
                android:id="@+id/cadastrar_Text6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:text="@string/stg_NomeTime"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/criarTime_EdtNomeTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <TextView
                android:id="@+id/cadastrar_Text7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:text="@string/stg_Membros"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/criarTime_EdtMembro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/criarTime_EdtNomeTime" />

            <EditText
                android:id="@+id/criarTime_EdtMembro"
                android:theme="@style/MyEdtTheme2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/edt_Membro"
                android:inputType="textAutoCorrect|textAutoComplete"
                android:singleLine="false"
                android:textColor="@color/Theme2"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/criarTime_EdtMembro1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cadastrar_Text7" />

            <EditText
                android:id="@+id/criarTime_EdtMembro1"
                android:theme="@style/MyEdtTheme6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/edt_Membro"
                android:inputType="textAutoCorrect|textAutoComplete"
                android:singleLine="false"
                android:textColor="@color/Theme6"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/criarTime_EdtMembro2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/criarTime_EdtMembro" />

            <EditText
                android:id="@+id/criarTime_EdtMembro2"
                android:theme="@style/MyEdtTheme1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/edt_Membro"
                android:inputType="textAutoCorrect|textAutoComplete"
                android:singleLine="false"
                android:textColor="@color/Theme1"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/criarTime_EdtMembro3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/criarTime_EdtMembro1" />

            <EditText
                android:id="@+id/criarTime_EdtMembro3"
                android:theme="@style/MyEdtTheme3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/edt_Membro"
                android:inputType="textAutoCorrect|textAutoComplete"
                android:singleLine="false"
                android:textColor="@color/Theme3"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/criarTime_EdtMembro4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/criarTime_EdtMembro2" />

            <EditText
                android:id="@+id/criarTime_EdtMembro4"
                android:theme="@style/MyEdtTheme4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/edt_Membro"
                android:inputType="textAutoCorrect|textAutoComplete"
                android:singleLine="false"
                android:textColor="@color/Theme4"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/criarTime_EdtMembro5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/criarTime_EdtMembro3" />

            <EditText
                android:id="@+id/criarTime_EdtMembro5"
                android:theme="@style/MyEdtTheme5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/edt_Membro"
                android:inputType="textAutoCorrect|textAutoComplete"
                android:singleLine="false"
                android:textColor="@color/Theme5"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/criarTime_ProgressBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/criarTime_EdtMembro4" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner1"
                app:layout_constraintBottom_toTopOf="@+id/cadastrar_Text6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/stg_InicieSuaHistoria"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/imageView6" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>
