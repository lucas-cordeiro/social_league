<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framePerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.akayto.socialleague.Fragments.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Gray">

            <Button
                android:id="@+id/perfil_BntTime"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/my_button_bg"
                android:text="@string/bnt_EncontrarTime"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/perfil_TxtSemTime" />

            <ImageView
                android:id="@+id/perfil_ImagemCapa"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/zedcima"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/perfil_ImagemConta"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/icone_014"
                app:layout_constraintEnd_toEndOf="@+id/perfil_ImagemCapa"
                app:layout_constraintStart_toStartOf="@+id/perfil_ImagemCapa"
                app:layout_constraintTop_toTopOf="@+id/perfil_ImagemCapa" />

            <TextView
                android:id="@+id/perfil_NomeConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:background="#7b000000"
                android:padding="2dp"
                android:text="zGOLD"
                android:textColor="@color/colorNavLetras"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/perfil_ImagemCapa"
                app:layout_constraintStart_toStartOf="@+id/perfil_ImagemCapa"
                app:layout_constraintTop_toBottomOf="@+id/perfil_ImagemConta" />

            <TextView
                android:id="@+id/perfil_NickLoLConta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="#7b000000"
                android:drawableLeft="@drawable/ic_menu_alterar2"
                android:padding="4dp"
                android:text="@string/stg_NickLoL"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/perfil_ImagemCapa"
                app:layout_constraintStart_toStartOf="@+id/perfil_ImagemCapa"
                app:layout_constraintTop_toBottomOf="@+id/perfil_NomeConta" />

            <TextView
                android:id="@+id/perfil_Campeonatos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="#7b000000"
                android:drawableLeft="@drawable/ic_menu_torneios2"
                android:padding="4dp"
                android:text="@string/stg_Campeonatos"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/perfil_ImagemCapa"
                app:layout_constraintStart_toStartOf="@+id/perfil_ImagemCapa"
                app:layout_constraintTop_toBottomOf="@+id/perfil_NickLoLConta" />

            <TextView
                android:id="@+id/perfil_Vitorias"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="#7b000000"
                android:drawableLeft="@drawable/ic_stars_yellow"
                android:padding="4dp"
                android:text="@string/stg_Vitorias"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/perfil_ImagemCapa"
                app:layout_constraintStart_toStartOf="@+id/perfil_ImagemCapa"
                app:layout_constraintTop_toBottomOf="@+id/perfil_Campeonatos" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:src="@drawable/zedbaixo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/perfil_ImagemCapa" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/stg_Time"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/perfil_TxtSemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/stg_SemTime"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/perfil_LayoutTime"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="356dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/colorBanner"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/time_ImgIcoce"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_weight="0"
                        android:background="@drawable/div3"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@color/colorBanner"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/time_TxtNome"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/time_TxtLider"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_lider"
                            android:text=""
                            android:gravity="left|center"
                            android:textColor="@android:color/white"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/time_TxtQuantMembros"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_membros"
                                android:text=""
                                android:textColor="@android:color/white"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/time_TxtCampeonatos"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_menu_torneios2"
                                android:text=""
                                android:textColor="@android:color/white"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/time_TxtVitorias"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_stars_yellow"
                                android:text=""
                                android:textColor="@android:color/white"
                                android:textSize="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <ProgressBar
                android:id="@+id/perfil_ProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/perfil_LayoutTime" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>
